<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.UserFragment"
    android:background="@drawable/bg_test">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/header_home"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="top">

            <ImageView
                android:id="@+id/ic_menu"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30sp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"></ImageView>
            <ImageView
                android:id="@+id/btn_language_en"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="10sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30sp"
                android:src="@drawable/ic_menu"></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/banner_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_home">
            <androidx.cardview.widget.CardView
                android:id="@+id/avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/circle_drawable"
                app:cardCornerRadius="70dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avahang"
                    app:shapeAppearanceOverlay="@style/Circular"
                    app:strokeColor="#FFFFFF"
                    app:strokeWidth="3dp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/avatar"
                android:fontFamily="@font/mont_bold"
                android:text="Cao Thị Thúy Hằng"
                android:textColor="#ffffff"
                android:textSize="20sp"></TextView>
            <RelativeLayout
                android:id="@+id/gr_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/avatar">
                <ImageView
                    android:id="@+id/major"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/ic_avaa"
                    android:layout_marginLeft="23dp">
                </ImageView>

                <TextView
                    android:id="@+id/txt_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/major"
                    android:fontFamily="@font/mont_bold"
                    android:text="Engineer Supervisor"
                    android:textColor="#DCDCDC"
                    android:textSize="15sp"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/gr_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gr_major"
                android:layout_toRightOf="@id/avatar">
                <ImageView
                    android:id="@+id/id"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_id"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp">
                </ImageView>

                <TextView
                    android:id="@+id/txt_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/id"
                    android:fontFamily="@font/mont_bold"
                    android:text="EVNGL007"
                    android:textColor="#DCDCDC"
                    android:textSize="15sp"></TextView>
            </RelativeLayout>

<!--            <Button-->
<!--                android:layout_width="140sp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/btn_drawable"-->
<!--                android:layout_below="@+id/major"-->
<!--                android:layout_toRightOf="@id/avatar"-->
<!--                android:text="Edit Profile"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:textAllCaps="false"-->
<!--                android:textSize="16sp"-->
<!--                android:textColor="#ffffff"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_marginTop="20sp"-->
<!--                android:layout_marginBottom="20sp"-->
<!--                android:fontFamily="@font/mont_mdium">-->
<!--            </Button>-->
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/banner_user"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingBottom="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:background="@drawable/draw_bg_card">
                    <RelativeLayout
                        android:id="@+id/layout_noti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp">
                        <ImageView
                            android:id="@+id/ic_noti"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:src="@drawable/ic_notii"
                            android:layout_marginLeft="20sp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="@font/mont_bold"
                            android:text="Notification"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/ic_noti"></TextView>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20sp"
                            android:theme="@style/Switch">
                        </Switch>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_user"
                        android:layout_below="@+id/layout_noti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp">
                        <ImageView
                            android:id="@+id/ic_user"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:src="@drawable/ic_userr"
                            android:layout_marginLeft="20sp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="@font/mont_bold"
                            android:text="Private Account"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/ic_user"></TextView>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20sp"
                            android:theme="@style/Switch">
                        </Switch>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/detail2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="20sp"
                    android:paddingBottom="15sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_below="@id/detail"
                    android:background="@drawable/draw_bg_card">
                    <RelativeLayout
                        android:id="@+id/layout_security"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp">
                        <ImageView
                            android:id="@+id/ic_security"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:src="@drawable/ic_security"
                            android:layout_marginLeft="20sp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="@font/mont_bold"
                            android:text="Security and Privacy"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/ic_security"></TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20sp"></ImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_text"
                        android:layout_below="@+id/layout_security"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp">
                        <ImageView
                            android:id="@+id/ic_text"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:src="@drawable/ic_textsize"
                            android:layout_marginLeft="20sp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="@font/mont_bold"
                            android:text="Text Size"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/ic_text"></TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20sp"></ImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_language"
                        android:layout_below="@+id/layout_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp">
                        <ImageView
                            android:id="@+id/ic_language"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:src="@drawable/ic_language"
                            android:layout_marginLeft="20sp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="@font/mont_bold"
                            android:text="Languages"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/ic_language"></TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20sp"></ImageView>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/detail3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="20sp"
                    android:paddingBottom="15sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_below="@id/detail2"
                    android:background="@drawable/draw_bg_card">
                    <RelativeLayout
                        android:id="@+id/layout_mess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp">
                        <ImageView
                            android:id="@+id/ic_mess"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:src="@drawable/ic_mess"
                            android:layout_marginLeft="20sp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="@font/mont_bold"
                            android:text="Send us a message"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/ic_mess"></TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20sp"></ImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_about"
                        android:layout_below="@+id/layout_mess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp">
                        <ImageView
                            android:id="@+id/ic_about"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:src="@drawable/ic_about"
                            android:layout_marginLeft="20sp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="@font/mont_bold"
                            android:text="About Us"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/ic_about"></TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20sp"></ImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_faq"
                        android:layout_below="@+id/layout_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp">
                        <ImageView
                            android:id="@+id/ic_faq"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:src="@drawable/ic_faq"
                            android:layout_marginLeft="20sp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="@font/mont_bold"
                            android:text="FAQs"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/ic_faq"></TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20sp"></ImageView>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/detail4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="20sp"
                    android:paddingBottom="15sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_below="@id/detail3"
                    android:background="@drawable/draw_bg_card">
                    <RelativeLayout
                        android:id="@+id/layout_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp">
                        <ImageView
                            android:id="@+id/ic_logout"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:src="@drawable/ic_logout"
                            android:layout_marginLeft="20sp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="@font/mont_bold"
                            android:text="Log Out"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/ic_logout"></TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20sp">
                        </ImageView>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
</RelativeLayout>